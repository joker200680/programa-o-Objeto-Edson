using UnityEngine;

[System.Serializable]
public class ItemArma : Item
{
    public int dano;
    public TipoArma tipoArma;

    public enum TipoArma
    {
        Arco,
        Espada,
        Cajado
    }

    public ItemArma()
    {
        tipo = TipoItem.Arma;
    }

    public override void Equipar(Player jogador)
    {
        if (!equipado)
        {
            equipado = true;
            Debug.Log($" {jogador.Nome} equipou {nome} (+{dano} de dano)");

            // Aplicar b么nus baseado no tipo de personagem
            Arqueiro arqueiro = jogador as Arqueiro;
            Guerreiro guerreiro = jogador as Guerreiro;
            Mago mago = jogador as Mago;

            if (arqueiro != null && tipoArma == TipoArma.Arco)
            {
                Debug.Log($" Arqueiro recebeu b么nus com arco!");
            }
            else if (guerreiro != null && tipoArma == TipoArma.Espada)
            {
                Debug.Log($" Guerreiro recebeu b么nus com espada!");
            }
            else if (mago != null && tipoArma == TipoArma.Cajado)
            {
                Debug.Log($" Mago recebeu b么nus com cajado!");
            }
        }
    }

    public override void Desequipar(Player jogador)
    {
        if (equipado)
        {
            equipado = false;
            Debug.Log($" {jogador.Nome} desequipou {nome}");
        }
    }
}
